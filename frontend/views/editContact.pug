doctype html
head
  meta(charset='UTF-8')
  title Editar contacto
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
  link(href='./scss/edit-contact.css' rel='stylesheet')
  
nav#menu-container.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link(href='/') Nuevo contacto
        li.nav-item
          a.nav-link(href='/contacts') Lista de contactos
.tittle-container
  h1 Editar contacto
form#form-contact.container.text-center
  h4 Ingrese los valores solicitados
  label#label-id(th:text='${contact.id}')
  .input-group.mb-3
    input#input-name.form-control(type='text' th:field='${contact.name}' placeholder='Nombre del contacto' aria-label='Username' aria-describedby='basic-addon1')
  .input-group.mb-3
    span.input-group-text +
    input#input-number.form-control(type='text' th:field='${contact.phone_number}' placeholder='Numero' aria-label='Server')
  .input-group.mb-3
    input#input-email.form-control(type='email' th:field='${contact.email}' placeholder='Email' aria-label='Username')
  .input-group
    span.input-group-text Fecha de nacimiento
    input#input-date.form-control(type='date' th:field='${contact.birth_date}' aria-label='With textarea')
  a#form-input.btn.btn-outline-info(type='submit') Enviar

script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
script(th:src='./js/edit-contact.js')