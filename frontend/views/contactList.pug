doctype html
head
  meta(charset='UTF-8')
  title Title
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
  link(href='./scss/contactList.css' rel='stylesheet')

nav#menu-container.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link(href='/') Nuevo contacto
        li.nav-item
          a.nav-link(href='/contacts') Lista de contactos
.tittle-container
  h1 Lista de contactos
.row
  .col-sm-6(th:each='contact : ${contact_list}')
    .card.text-center
      .card-header
        ul.nav.nav-pills.card-header-pills
      .card-body
        div
          label.fw-bold Nombre: 
          label#out-name.text-center(th:text='${contact.name}')
        div
          label.fw-bold Tel&eacute;fono: 
          label#out-number.text-center(th:text='${contact.phone_number}')
        a#detail-btn.btn.btn-outline-info(th:href='@{contacts/} + ${contact.id}') Ver detalles
        
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
